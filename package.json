{
    "name": "tweak-studio",
    "displayName": "Tweak Studio",
    "description": "A VS Code frontend for IDA and Hopper, designed for Objc binaries",
    "version": "0.0.1",
    "publisher": "NSCake",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:hopper.open",
        "onCommand:hopper.open-test",
        "onCommand:ida.open",
        "onCommand:ida.open-test",
        "onView:procs"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "tweakstudio",
                    "title": "Tweak Studio",
                    "icon": "media/dep.svg"
                }
            ]
        },
        "views": {
            "tweakstudio": [
                {
                    "id": "segments",
                    "name": "Segments"
                },
                {
                    "id": "procs",
                    "name": "Procedures"
                },
                {
                    "id": "strings",
                    "name": "Strings"
                },
                {
                    "id": "hooks",
                    "name": "Hooks"
                }
            ]
        },
        "commands": [
            {
                "command": "hopper.open",
                "title": "Open Binary or Document in Hopper"
            },
            {
                "command": "hopper.open-test",
                "title": "Open dummy binary in Hopper"
            },
            {
                "command": "ida.open",
                "title": "Open Binary or Database in IDA"
            },
            {
                "command": "ida.open-test",
                "title": "Open dummy binary in IDA"
            }
        ],
        "configuration": [
            {
                "title": "Tweak Studio",
                "properties": {
                    "tweakstudio.hopper.path": {
                        "type": "string",
                        "default": "/Applications/Hopper Disassembler.app",
                        "description": "The path to your copy of Hopper",
                        "pattern": "^/.+\\.app$",
                        "patternErrorMessage": "Must be a full path to an app without a trailing /"
                    },
                    "tweakstudio.ida.path": {
                        "type": "string",
                        "default": "/Applications/IDA Pro/ida.app",
                        "description": "The path to your copy of ida.app (not ida64.app)",
                        "pattern": "^/.+\\.app$",
                        "patternErrorMessage": "Must be a full path to an app without a trailing /"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/express": "^4.17.11",
        "@types/mocha": "^8.2.1",
        "@types/node": "^14.14.37",
        "@types/vscode": "^1.53.0",
        "mocha": "^8.3.0",
        "typescript": "^4.2.2",
        "vscode-test": "^1.5.1"
    },
    "dependencies": {
        "express": "^4.17.1",
        "node-fetch": "^2.6.1"
    }
}
